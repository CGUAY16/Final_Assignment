<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/background_for_slime_invaders">


    <TextView
        android:id="@+id/textview_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixel_font"
        android:text="Settings"
        android:textColor="#5F7BF5"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textview_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixel_font"
        android:text="Difficulty"
        android:textColor="#5F7BF5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <RadioGroup
        android:id="@+id/radioGroupButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="onRadioButtonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_difficulty"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/RbuttonEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#5F7BF5"
            android:checked="false"
            android:fontFamily="@font/pixel_font"
            android:text="Easy"
            android:textColor="#5F7BF5"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RbuttonNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#5F7BF5"
            android:checked="true"
            android:fontFamily="@font/pixel_font"
            android:text="Normal"
            android:textColor="#5F7BF5"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/RbuttonHard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#5F7BF5"
            android:checked="false"
            android:fontFamily="@font/pixel_font"
            android:text="Hard"
            android:textColor="#5F7BF5"
            android:textSize="20sp" />


    </RadioGroup>

    <Button
        android:id="@+id/change_profiles"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixel_font"
        android:text="Change Profile"
        android:textColor="#5F7BF5"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/mainmenu_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixel_font"
        android:text="Main Menu"
        android:textColor="#5F7BF5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />


</androidx.constraintlayout.widget.ConstraintLayout>